<div class="benefits-section">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <div class="benefits-grid">
      {% for block in section.blocks %}
        <div class="benefit-item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="benefit-icon">
              <img src="{{ block.settings.icon | img_url: '100x' }}" alt="{{ block.settings.title }}">
            </div>
          {% endif %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.benefits-section {
  padding: 80px 20px;
  background-color: white;
}

.benefits-section .container {
  max-width: 1200px;
  margin: 0 auto;
}

.benefits-section h2 {
  text-align: center;
  font-size: 36px;
  margin-bottom: 50px;
  color: #2D5F3F;
}

.benefits-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 40px;
}

.benefit-item {
  text-align: center;
}

.benefit-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f7f4;
  border-radius: 50%;
  padding: 20px;
}

.benefit-icon img {
  max-width: 100%;
  height: auto;
}

.benefit-item h3 {
  font-size: 20px;
  margin-bottom: 15px;
  color: #2D5F3F;
}

.benefit-item p {
  color: #666;
  line-height: 1.6;
}

@media (max-width: 768px) {
  .benefits-grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Benefits Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Benefit Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Benefit description goes here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Benefits Section",
      "blocks": [
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        },
        {
          "type": "benefit"
        }
      ]
    }
  ]
}
{% endschema %}
