<style>
  .reviews-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #e8f4f8 0%, #fff5f8 100%);
    position: relative;
  }
  
  .reviews-section .section-heading {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin: 0 0 60px 0;
    color: var(--color-charcoal);
  }
  
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto 50px;
    padding: 0 20px;
  }
  
  .review-card {
    background: white;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .review-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.12);
  }
  
  .review-source {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-deep-teal);
    margin-bottom: 15px;
  }
  
  .review-text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text);
    font-style: italic;
    margin: 0;
  }
  
  .trustpilot-link {
    text-align: center;
  }
  
  .btn-outline {
    display: inline-block;
    padding: 15px 35px;
    border: 2px solid var(--color-deep-teal);
    color: var(--color-deep-teal);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 5px;
    transition: all 0.3s ease;
  }
  
  .btn-outline:hover {
    background-color: var(--color-deep-teal);
    color: white;
  }
  
  @media (max-width: 768px) {
    .reviews-section {
      padding: 60px 0;
    }
    
    .reviews-section .section-heading {
      font-size: 2rem;
    }
    
    .reviews-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

