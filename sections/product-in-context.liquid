<div class="in-context">
  <div class="container">
    <div class="context-grid">
      <div class="context-content">
        <div class="context-label">{{ section.settings.label }}</div>
        <h2 class="context-heading">{{ section.settings.heading }}</h2>
        <div class="context-text">
          {{ section.settings.description }}
        </div>
        <div class="context-text-secondary">
          {{ section.settings.secondary_text }}
        </div>
      </div>
      <div class="context-images">
        {% if section.settings.image_1 %}
          <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="{{ section.settings.heading }}" class="context-img">
        {% endif %}
        {% if section.settings.image_2 %}
          <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="{{ section.settings.heading }}" class="context-img">
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
.in-context {
  padding: 80px 0;
  background: #faf8f4;
}

.in-context .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 40px;
}

.context-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 80px;
  align-items: center;
}

.context-label {
  font-size: 13px;
  font-weight: 500;
  letter-spacing: 3px;
  text-transform: uppercase;
  color: #666;
  margin-bottom: 16px;
}

.context-heading {
  font-size: 42px;
  font-weight: 500;
  line-height: 1.1;
  margin: 0 0 24px 0;
  color: #1a1a1a;
}

.context-text {
  font-size: 16px;
  line-height: 1.7;
  color: #666;
  margin-bottom: 16px;
}

.context-text-secondary {
  font-size: 16px;
  line-height: 1.7;
  color: #666;
}

.context-images {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.context-img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  object-fit: cover;
}

@media (max-width: 768px) {
  .context-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .context-heading {
    font-size: 32px;
  }
  
  .in-context {
    padding: 60px 0;
  }
}
</style>

{% schema %}
{
  "name": "In Context",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "IN CONTEXT"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Designed for your space."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "BOOM. isn't just a toothbrush â€” it's a design object. Minimal, beautiful, and made to belong on your counter, not hidden in a drawer."
    },
    {
      "type": "textarea",
      "id": "secondary_text",
      "label": "Secondary Text",
      "default": "The soft-touch matte finish resists fingerprints and feels warm in your hand. The weighted base keeps it stable. Every detail is considered."
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    }
  ]
}
{% endschema %}
