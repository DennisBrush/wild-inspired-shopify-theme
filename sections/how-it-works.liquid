<style>
  .how-it-works {
    padding: 100px 0;
    background: linear-gradient(180deg, var(--color-cream) 0%, #e8f4f8 100%);
    position: relative;
  }
  
  .section-heading {
    font-size: 3rem;
    font-weight: 700;
    text-align: center;
    margin: 0 0 15px 0;
    color: var(--color-charcoal);
  }
  
  .section-subtitle {
    font-size: 1.25rem;
    text-align: center;
    margin: 0 0 60px 0;
    color: var(--color-text);
  }
  
  .steps-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 50px;
    max-width: 1200px;
    margin: 0 auto 50px;
    padding: 0 20px;
  }
  
  .step-item {
    text-align: center;
    position: relative;
  }
  
  .step-number {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 40px;
    background: var(--color-neon-lime);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-charcoal);
  }
  
  .step-icon {
    font-size: 4rem;
    margin: 40px 0 20px 0;
  }
  
  .step-item h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 15px 0;
    color: var(--color-charcoal);
  }
  
  .step-item p {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text);
    margin: 0;
  }
  
  .cta-button-wrapper {
    text-align: center;
  }
  
  .btn-primary-large {
    display: inline-block;
    padding: 18px 40px;
    background-color: var(--color-deep-teal);
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-radius: 5px;
    transition: all 0.3s ease;
  }
  
  .btn-primary-large:hover {
    background-color: #145040;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }
  
  @media (max-width: 768px) {
    .how-it-works {
      padding: 60px 0;
    }
    
    .section-heading {
      font-size: 2rem;
    }
    
    .steps-grid {
      grid-template-columns: 1fr;
      gap: 50px;
    }
    
    .step-icon {
      font-size: 3rem;
    }
  }
</style>

