<div class="hero">
  <div class="hero-content">
    <h1>
      Refillable<br>
      body care<br>
      that works.
    </h1>
    <p class="hero-subtitle">Freshness that lasts. Refills that disappear.</p>
    <div class="hero-buttons">
      <a href="/products/roll-on-antiperspirant" class="btn btn-primary">SHOP ROLL ON ANTIPERSPIRANT</a>
      <a href="/products/deodorant" class="btn btn-secondary">SHOP STICK DEODORANT</a>
    </div>
  </div>
  <div class="hero-image">
    <img src="{{ section.settings.hero_image | img_url: '1200x' }}" alt="Wild Products">
  </div>
</div>

<style>
  .hero {
    background: linear-gradient(135deg, #ffc0cb 0%, #ffb3d9 50%, #ffa6d6 100%);
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 60px 5%;
    position: relative;
  }
  
  .hero-content {
    flex: 1;
    max-width: 600px;
    color: white;
  }
  
  .hero h1 {
    font-size: 4.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin: 0 0 20px 0;
    color: white;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 30px;
    color: white;
  }
  
  .hero-buttons {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }
  
  .hero .btn {
    padding: 15px 30px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }
  
  .hero .btn-primary {
    background-color: var(--color-deep-teal);
    color: white;
  }
  
  .hero .btn-primary:hover {
    background-color: #145040;
  }
  
  .hero .btn-secondary {
    background-color: #ff6b6b;
    color: white;
  }
  
  .hero .btn-secondary:hover {
    background-color: #ff5252;
  }
  
  .hero-image {
    flex: 1;
    max-width: 600px;
    text-align: right;
  }
  
  .hero-image img {
    max-width: 100%;
    height: auto;
  }
  
  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
      text-align: center;
      padding: 40px 5%;
    }
    
    .hero h1 {
      font-size: 3rem;
    }
    
    .hero-buttons {
      justify-content: center;
    }
    
    .hero-image {
      margin-top: 40px;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
