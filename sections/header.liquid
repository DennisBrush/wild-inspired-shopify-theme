<!-- Announcement Bar -->
{% if section.settings.show_announcement %}
<div class="announcement-bar">
  <p>{{ section.settings.announcement_text }}</p>
</div>
{% endif %}

<!-- Header -->
<header class="header">
  <div class="header__container">
    <!-- Mobile Menu Toggle -->
    <button class="header__mobile-toggle" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <!-- Logo -->
    <div class="header__logo">
      <a href="/">{{ shop.name }}</a>
    </div>

    <!-- Desktop Navigation -->
    <nav class="header__nav">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="header__nav-link">{{ link.title }}</a>
      {% endfor %}
    </nav>

    <!-- Account & Cart -->
    <div class="header__actions">
      <a href="/account" class="header__icon" aria-label="Account">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <circle cx="10" cy="7" r="3" stroke="currentColor" stroke-width="1.5"/>
          <path d="M4 17c0-3.5 2.5-6 6-6s6 2.5 6 6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </a>
      <a href="/cart" class="header__icon header__cart" aria-label="Cart">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <circle cx="8" cy="17" r="1" fill="currentColor"/>
          <circle cx="15" cy="17" r="1" fill="currentColor"/>
          <path d="M1 1h3l2.5 12h10l2.5-7H5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="header__cart-count">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>

  <!-- Mobile Navigation -->
  <nav class="header__mobile-nav">
    {% for link in linklists.main-menu.links %}
      <a href="{{ link.url }}" class="header__mobile-link">{{ link.title }}</a>
    {% endfor %}
  </nav>
</header>

<style>
  /* Announcement Bar */
  .announcement-bar {
    background: {{ section.settings.announcement_bg }};
    color: {{ section.settings.announcement_color }};
    text-align: center;
    padding: 12px 20px;
    font-size: 14px;
    font-weight: 500;
  }

  /* Header */
  .header {
    background: {{ section.settings.header_bg }};
    border-bottom: 1px solid #e5e5e5;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 16px 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
  }

  /* Mobile Toggle */
  .header__mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
  }

  .header__mobile-toggle span {
    width: 20px;
    height: 2px;
    background: #000;
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .header__mobile-toggle {
      display: flex;
    }
  }

  /* Logo */
  .header__logo {
    flex-shrink: 0;
  }

  .header__logo a {
    font-size: 32px;
    font-weight: 700;
    color: #000;
    text-decoration: none;
    font-family: 'Georgia', serif;
  }

  /* Desktop Navigation */
  .header__nav {
    display: flex;
    gap: 32px;
    flex: 1;
    justify-content: center;
  }

  .header__nav-link {
    color: #000;
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .header__nav-link:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .header__nav {
      display: none;
    }
  }

  /* Actions */
  .header__actions {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .header__icon {
    color: #000;
    position: relative;
    transition: opacity 0.2s;
  }

  .header__icon:hover {
    opacity: 0.7;
  }

  .header__cart-count {
    position: absolute;
    top: -6px;
    right: -8px;
    background: #000;
    color: #fff;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 11px;
    font-weight: 600;
  }

  /* Mobile Navigation */
  .header__mobile-nav {
    display: none;
    flex-direction: column;
    padding: 20px 24px;
    border-top: 1px solid #e5e5e5;
  }

  .header__mobile-nav.active {
    display: flex;
  }

  .header__mobile-link {
    padding: 12px 0;
    color: #000;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
    border-bottom: 1px solid #f0f0f0;
  }
</style>

<script>
  // Mobile menu toggle
  document.querySelector('.header__mobile-toggle')?.addEventListener('click', function() {
    document.querySelector('.header__mobile-nav').classList.toggle('active');
    this.classList.toggle('active');
  });
</script>

