<header class="header">
  <div class="header__logo">
    <a href="/">{{ shop.name }}</a>
  </div>
  <nav class="header__nav">
    {% for link in linklists.main-menu.links %}
      <a href="{{ link.url }}">{{ link.title }}</a>
    {% endfor %}
  </nav>
  <div class="header__cart">
    <a href="/cart">Cart ({{ cart.item_count }})</a>
  </div>
</header>

{% schema %}
{
  "name": "Header"
}
{% endschema %}
