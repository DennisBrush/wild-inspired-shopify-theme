{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement bar",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Gratis verzending vanaf â‚¬30 ðŸšš"
    },
    {
      "type": "color",
      "id": "announcement_bg",
      "label": "Announcement background",
      "default": "#"#e9ff07""
    },
    {
      "type": "color",
      "id": "announcement_color",
      "label": "Announcement text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "header_bg",
      "label": "Header background",
      "default": "#FFFFFF"
    }
  ]
