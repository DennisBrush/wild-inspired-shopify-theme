{% doc %}
  @prompt
    Create a hero section block with a background image upload option. The block should allow merchants to upload any image that displays as a full background image covering the entire section. Include settings for the background image upload, background size (cover, contain), background position (center, top, bottom), and an optional overlay with color and opacity controls for better text readability.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.background_size }};
    object-position: {{ block.settings.background_position }};
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 600px;
    max-height: 600px;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    max-width: 90%;
  }

  {% if block.settings.show_overlay %}
    .ai-hero-overlay-{{ ai_gen_id }} {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: {{ block.settings.overlay_color }};
      opacity: {{ block.settings.overlay_opacity }};
      z-index: 2;
    }
  {% endif %}

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.content_alignment }};
    justify-content: {{ block.settings.content_vertical_alignment }};
    min-height: {{ block.settings.section_height }}px;
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
    width: 100%;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px 0;
    line-height: 1.5;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height_mobile }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height_mobile }}px;
      padding: {{ block.settings.content_padding_mobile }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size_mobile }}px;
    }
  }
{% endstyle %}

<ai-hero-section-{{ ai_gen_id }} class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        srcset="{{ block.settings.background_image | image_url: width: 600 }} 600w,
                {{ block.settings.background_image | image_url: width: 1200 }} 1200w,
                {{ block.settings.background_image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-empty-state-{{ ai_gen_id }}">
          Upload a background image to get started
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-hero-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</ai-hero-section-{{ ai_gen_id }}>

<script>
  (function() {
    class AiHeroSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const heading = this.querySelector('.ai-hero-heading-{{ ai_gen_id }}');
        if (heading) {
          this.setAttribute('aria-labelledby', heading.id || 'hero-heading-{{ ai_gen_id }}');
          if (!heading.id) {
            heading.id = 'hero-heading-{{ ai_gen_id }}';
          }
        }
      }
    }

    customElements.define('ai-hero-section-{{ ai_gen_id }}', AiHeroSection{{ ai_gen_id }});
  })();
</script>

